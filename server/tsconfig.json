{
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
    //        "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/public"]
}
